<% provide(:title, "Log in") %>

<section class="subpage-bg">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="titile-block title-block_subpage">
          <h2>Login</h2>
        </div>
      </div>
    </div>
  </div>
</section>
<!--// SUBPAGE HEADER BG -->
<!--============================= CONTACT =============================-->
<div class="row no-gutters justify-content-center" style="margin-top:60px; width: auto;">

  <div class="container">

      <div class="col-md-12 responsive-wrap">

        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control add-listing_form', id: "email"%>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= link_to "(forgot password)", new_password_reset_path %>
            <%= f.password_field :password, class: 'form-control add-listing_form', id: "password"%>
          </div>

          <div class="form-group">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
              <div class="form-group">
            <% end %>
            <div class="form-group">
              <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
        <% end %>
        <div class="form-group">
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        </div>
        </div>
      </div>

      </div>
    </div>
  </div>
