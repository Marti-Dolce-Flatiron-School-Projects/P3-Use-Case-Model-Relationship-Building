<!-- Log In & Signup -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="login" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">LOGIN</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="sign-up" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">SIGN UP</a>
        </li>
      </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="login">
          <div class="modal-header">
            <h5 class="modal-title"><img src="images/twenty9signals Logo 00-450x.png" alt="logo"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span class="ti-close"></span>
            </button>
          </div>
          <div class="modal-body">
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
              <%= render 'shared/error_messages' %>
              <p>New user? <%= link_to "Sign up now!", signup_path %></p>

              <div class="form-group">
            <%= f.email_field :email, class: 'form-control add-listing_form' %></div>
              <div class="form-group">
                <%= f.password_field :password, class: 'form-control add-listing_form' %>
              </div>

              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>Remember me on this computer</span>
              <% end %>

          </div>
          <div class="modal-footer justify-content-center">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        </div>
            <% end %>
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="sign-up">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><img src="images/twenty9signals Logo 00-450x.png" alt="logo"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span class="ti-close"></span>
            </button>
          </div>
          <div class="modal-body">
            <%= form_with(model: @user, local: true) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div class="form-group">
                <input type="text" class="form-control add-listing_form" >
                <%= f.text_field :fname, class: 'form-control add-listing_form', id: "name",  placeholder: "Your name"%>

              </div>

              <div class="form-group">
                <input type="text" class="form-control add-listing_form" >
                <%= f.text_field :lname, class: 'form-control add-listing_form', id: "name",  placeholder: "Your name"%>

              </div>
              <div class="form-group">
                <input type="text" class="form-control add-listing_form" id="email" placeholder="Email">
                <%= f.email_field :email, class: 'form-control add-listing_form', id: "email",  placeholder: "Email" %>

              </div>
              <div class="form-group">
                <%= f.password_field :password, class: 'form-control add-listing_form', id: "password",  placeholder: "Password" %>

              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, class: 'form-control add-listing_form', id: "password_confirmation",  placeholder: "Confirm Password" %>
              </div>
            </form>
          </div>
          <div class="modal-footer justify-content-center">
            <%= f.submit "Create my account", class: "btn btn-primary" %>

          </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!--// Log In & Signup -->
